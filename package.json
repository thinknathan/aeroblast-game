{
	"name": "aeroblast-game",
	"version": "1.0.2",
	"description": "Auto-shooter Defold game based on Boom and built with TypeScriptToLua",
	"author": "Nathan Bolton (https://thinknathan.ca)",
	"license": "AGPL-3.0-or-later",
	"engines": {
		"node": "^18.18.0 || ^20.9.0 || >=21.1.0"
	},
	"type": "module",
	"scripts": {
		"build": "tstl",
		"buildO1": "tstl -p tsconfig.production.json",
		"dev": "tstl --watch",
		"lint": "eslint src",
		"lintfix": "eslint src --fix",
		"prettier": "prettier \"./**/*.{yml,json,ts,md,d.ts}\" --write",
		"resolve": "library resolve"
	},
	"devDependencies": {
		"@ts-defold/library": "~0.1.2",
		"@ts-defold/tstl-userdata-sugar": "^1.0.0",
		"@ts-defold/types": "git+https://git@github.com/thinknathan/ts-defold-types.git#>=1.6.4",
		"eslint": "^9.0.0",
		"prettier": "^3.1.0",
		"tstl-const-propagation": "^2.0.0",
		"tstl-export-rename": "^1.0.0",
		"tstl-export-to-global": "^1.0.0",
		"tstl-remove-debug": "^1.0.0",
		"tstl-simple-inline-func": "^1.0.0",
		"tstl-trim-extensions": "^1.0.3",
		"typescript": "5.4.2",
		"typescript-eslint": "^7.6.0",
		"typescript-to-lua": "~1.25.0",
		"typescript-tstl-plugin": "~0.3.2"
	},
	"resolutions": {
		"@ts-defold/types": "git+https://git@github.com/thinknathan/ts-defold-types.git#>=1.6.4",
		"typescript-to-lua": "~1.25.0"
	},
	"overrides": {
		"typescript": "~5.4.2"
	}
}
