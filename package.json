{
	"name": "aeroblast-game",
	"version": "1.0.1",
	"description": "Auto-shooter Defold game based on Boom and built with TypeScriptToLua",
	"author": "Nathan Bolton (https://thinknathan.ca)",
	"license": "(GPL-3.0 OR MPL-2.0)",
	"engines": {
		"node": "^16.0.0 || >=18.0.0"
	},
	"type": "module",
	"scripts": {
		"build": "tstl",
		"buildO1": "tstl -p tsconfig.production.json",
		"dev": "tstl --watch",
		"lint": "eslint src",
		"lintfix": "eslint src --fix",
		"prettier": "prettier \"./**/*.{eslintrc,yml,json,ts,md,d.ts}\" --write"
	},
	"devDependencies": {
		"@ts-defold/library": "~0.1.2",
		"@ts-defold/tstl-userdata-sugar": "~1.0.0",
		"@ts-defold/types": "git+https://git@github.com/thinknathan/ts-defold-types.git#^1.3.0",
		"@types/tsd-boom": "git+https://git@github.com/thinknathan/tsd-boom-types.git#^1.0.0",
		"@types/tsd-xmath": "git+https://git@github.com/thinknathan/tsd-xmath-types.git#^1.0.0",
		"@typescript-eslint/eslint-plugin": "~6.16.0",
		"@typescript-eslint/parser": "~6.16.0",
		"eslint": "~8.56.0",
		"eslint-config-prettier": "~9.1.0",
		"eslint-plugin-prettier": "~5.1.2",
		"prettier": "~3.1.0",
		"tstl-const-propagation": "git+https://git@github.com/thinknathan/tstl-const-propagation.git#^2.0.0",
		"tstl-export-to-global": "git+https://git@github.com/thinknathan/tstl-export-to-global.git#^1.0.0",
		"tstl-simple-inline-func": "git+https://git@github.com/thinknathan/tstl-simple-inline-func.git#^1.0.0",
		"tstl-trim-extensions": "^1.0.3",
		"typescript": "~5.3.3",
		"typescript-to-lua": "~1.23.0",
		"typescript-tstl-plugin": "~0.3.2"
	},
	"resolutions": {
		"@ts-defold/types": "git+https://git@github.com/thinknathan/ts-defold-types.git#^1.3.0",
		"typescript-to-lua": "~1.23.0"
	},
	"overrides": {
		"typescript": "~5.3.3"
	}
}
